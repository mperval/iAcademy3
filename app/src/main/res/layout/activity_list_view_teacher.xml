<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listView.ListViewTeacherAcademy">

    <LinearLayout
        android:id="@+id/lyTeacherListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:text="Teacher"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#0469b3"
            android:textColor="@color/white"/>
        <ListView
            android:id="@+id/lvTeacherAcademy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">
        </ListView>
    </LinearLayout>
    <Button
        android:id="@+id/btnAddTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="Add Teacher"
        app:layout_constraintBottom_toBottomOf="@+id/lyTeacherListView"
        app:layout_constraintRight_toRightOf="@+id/lyTeacherListView"
        android:backgroundTint="#0469b3"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>